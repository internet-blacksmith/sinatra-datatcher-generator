<html>
  <head>
    <title><?= title ?></title>
    <link href="lib//bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"></link>
    <? if( datetime ){ ?><link href="lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet"> <? } ?>
    <? if( date ){     ?><link href="lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css" rel="stylesheet">                  <? } ?>
    <? if( time ){     ?><link href="lib/clockpicker/dist/bootstrap-clockpicker.min.css" rel="stylesheet">                               <? } ?>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <h3><?= title ?></h3>
      </div>
      <%= yield %>
    </div>
    <script src="lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <? if( datetime ){ ?><script src="lib/moment/min/moment.min.js" type="text/javascript"></script><? } ?>
    <? if( datetime ){ ?><script src="lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script><? } ?>
    <? if( date ){     ?><script src="lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js" type="text/javascript"></script><? } ?>
    <? if( time ){     ?><script src="lib/clockpicker/dist/jquery-clockpicker.min.js" type="text/javascript"></script><? } ?>
    <script>
      $( document ).ready(function() {
      <? if( datetime ){?>  $(".datetimepicker").datetimepicker({ sideBySide: true, format: 'YYYY-MM-DD HH:mm' }); <? } ?>
      <? if( date ){    ?>  $(".datepicker").datepicker({ format: 'yyyy-mm-dd' }); <? } ?>
      <? if( time ){    ?>  $(".timepicker").clockpicker(); <? } ?>
      });
    </script>
  </body>
</html>
